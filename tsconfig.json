{
  "compilerOptions": {
    /* basic */
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    /* jsx */
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    /* declaration */
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist"
  },
  "exclude": ["**/*.stories.*", "vite.config.ts"]
}
